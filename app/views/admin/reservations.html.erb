



<% if current_user.admin? || current_user.host? %>  

    <%= render partial:'application/navadmin' %>
    <br>
    <div class="table-responsive">
        <table class="table table-hover">

        <thead>
        <tr>
            <th>TOTAL Reservations: <%=@reservations.count %></th>

        <tr>
        </thead>
        <thead>
        <tr>
       
            <th>Reservation Id</th>
            <th>User Id </th>
            <th>Listing Id</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody id="myDIV">
  
        <% @reservations.order(created_at: :desc).each do |reservation| %>
        <tr>
            <td><%= link_to reservation.id ,reservation %></td> 
            <td><%= link_to reservation.user.id ,reservation %></td> 
            <td><%= link_to reservation.listing.id ,reservation.listing %></td> 
            <td><%= reservation.status %></td>
            <td><%= reservation.start_date %></td>
            <td><%= reservation.end_date %></td>
            <td><%= link_to 'Edit', edit_reservation_path(reservation) %>
            <%= link_to 'Destroy',reservation ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tr> 
        </tbody>
    </table>
    </div>
<% end %>
        
           



        
      
       
