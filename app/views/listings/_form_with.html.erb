

 
 <%= form_with url: listings_path, remote:true,method: :get, local: true do |f| %>



   <% if (params[:minimum_price].present?) %>
                <%= f.number_field :minimum_price, placeholder:"MIN",value: params[:minimum_price] %>
          <% else %>
                <%= f.number_field :minimum_price, placeholder:"MIN",value: 0 %>
        <% end %>

        <% if (params[:maximum_price].present?) %>
                <%= f.number_field :maximum_price,placeholder:"MAX", value: params[:maximum_price] %>
        <% else %>
                <%= f.number_field :maximum_price,placeholder:"MAX", value:100000  %>
        <% end %>

                <%= f.submit "Search", name: '',class:"btn btn-outline-success my-2 my-sm-0" %>
            <% end %>

              
           <%= form_with url: listings_path, method: :get, remote: true do |f| %>
             <%= f.text_field :term, placeholder:"City?",value: params[:term] ,id:"myInput"%>
                <%= f.submit "Search", name: '',class:"btn btn-4"%>
         
           <% end %> 
    
    
