<%= form_with(model: @reservation, local: true) do |form| %>
      
    <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status %>
  </div>
  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>

<%= form.hidden_field :listing_id, value: @listing.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
